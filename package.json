{
  "private": true,
  "scripts": {
    "dev:server": "pnpm --filter server dev",
    "dev:server-hono": "pnpm --filter server-hono dev",
    "dev:client": "pnpm --filter client dev",
    "dev": "concurrently \"pnpm dev:client\" \"pnpm dev:server\"",
    "dev2": "concurrently \"pnpm dev:client\" \"pnpm dev:server-hono\"",
    "build:server": "pnpm --filter server build",
    "build:server-hono": "pnpm --filter server-hono build",
    "build:client": "pnpm --filter client build",
    "build": "pnpm build:client && pnpm build:server && pnpm build:server-hono"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "nodemon": "^3.1.10",
    "@supabase/supabase-js": "^2.55.0",
    "@trpc/server": "^11.4.4",
    "dotenv": "^17.2.1",
    "zod": "^4.0.17"
  }
}
